<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bf9b30"
    android:orientation="vertical">

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_marginTop="10dp"
      android:scaleType="fitCenter"
      android:src="@drawable/logotulisan"/>

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_gravity="center"
      android:text="History Penanganan Hukum"
      android:textSize="12pt"/>

    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/AppTheme.AppBarOverlay">


      <android.support.design.widget.TabLayout
        android:id="@+id/tabtest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
      android:id="@+id/lndata"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#ffff"
      android:orientation="vertical">
      <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    </LinearLayout>
  </LinearLayout>


  <LinearLayout
    android:id="@+id/lnbutton"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="@color/primary"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/lnProfile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_marginVertical="5dp"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/ivTendaDoom"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:src="@drawable/ic_account_circle_orange"/>
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE"/>

    </LinearLayout>


    <LinearLayout
      android:id="@+id/lnPesan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_marginVertical="5dp"
      android:gravity="center"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/ivAcc"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:src="@drawable/ic_message"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PESAN"/>


    </LinearLayout>

  </LinearLayout>


</android.support.design.widget.CoordinatorLayout>