<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad1"
    android:fitsSystemWindows="true"
    android:theme="@style/Apptheme2">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="16dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="16dp"
               android:text="@string/text_detail_workman"
               android:textColor="@android:color/white"
               android:textStyle="bold"
               android:textSize="20sp" />

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardBackgroundColor="@android:color/transparent"
               app:cardElevation="0dp"
               app:cardPreventCornerOverlap="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="@drawable/card_shape"
                   android:padding="16dp">

                   <ImageView
                       android:id="@+id/img_user_profile"
                       android:layout_width="70dp"
                       android:layout_height="70dp"
                       android:src="@drawable/ic_account_circle_orange"/>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="16dp"
                       android:layout_marginStart="16dp"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/text_name"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:paddingBottom="8dp"
                           android:paddingTop="8dp"
                           android:textColor="@android:color/white"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:text="Situmorang"/>

                       <TextView
                           android:id="@+id/text_address"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:textColor="@android:color/white"
                           android:textSize="14sp"
                           android:text="Yogyakarta"/>

                       <TextView
                           android:id="@+id/text_cellphone"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:ellipsize="end"
                           android:lines="1"
                           android:textColor="@android:color/white"
                           android:textSize="14sp"
                           android:text="phone"/>

                   </LinearLayout>
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/cv_detailprofile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               app:cardBackgroundColor="@android:color/transparent"
               app:cardElevation="0dp"
               app:cardPreventCornerOverlap="true">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@drawable/card_shape"
                   android:padding="16dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:text="@string/text_language"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_colon"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:id="@+id/text_language"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingBottom="4dp"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="4dp"
                       android:gravity="center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:text="@string/text_skill"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_colon"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:id="@+id/text_skill"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_skill"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:text="@string/text_level"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_colon"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:id="@+id/text_level"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:text="@string/text_rating"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_colon"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />


                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="100dp"
                           android:layout_height="wrap_content"
                           android:text="@string/text_price"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingEnd="8dp"
                           android:paddingLeft="8dp"
                           android:paddingRight="8dp"
                           android:paddingStart="8dp"
                           android:text="@string/text_colon"
                           android:textColor="@android:color/white"
                           android:textSize="14sp" />

                       <TextView
                           android:id="@+id/text_price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@android:color/darker_gray"
                           android:textSize="14sp" />


                   </LinearLayout>
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/cv_date_order"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/res_24dp"
               app:cardBackgroundColor="@android:color/transparent"
               app:cardElevation="0dp"
               app:cardPreventCornerOverlap="true"
               app:layout_constraintBottom_toTopOf="@id/button_submit"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/cv_detailprofile"
               >
               <android.support.constraint.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/card_shape"
                   android:padding="@dimen/res_9dp"
                   android:paddingTop="@dimen/res_18dp"
                   >

                   <TextView
                       android:id="@+id/txStartDate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Tanggal Mulai Project"
                       android:textColor="@color/colorWhite"
                       app:layout_constraintBottom_toTopOf="@id/btn_start_date"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"/>

                   <Button
                       android:id="@+id/btn_start_date"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_marginTop="@dimen/res_9dp"
                       android:hint="Tanggal Mulai"
                       android:background="@drawable/bg_transparent_silver"
                       app:layout_constraintBottom_toTopOf="@id/txEndDate"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/txStartDate"/>

                   <TextView
                       android:id="@+id/txEndDate"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Tanggal Akhir Project"
                       android:layout_marginTop="@dimen/res_24dp"
                       android:textColor="@color/colorWhite"
                       app:layout_constraintBottom_toTopOf="@id/btn_end_date"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/btn_start_date"/>

                   <Button
                       android:id="@+id/btn_end_date"
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:layout_marginTop="@dimen/res_9dp"
                       android:hint="Tanggal Akhir"
                       android:background="@drawable/bg_transparent_silver"
                       app:layout_constraintBottom_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/txEndDate"/>

               </android.support.constraint.ConstraintLayout>
           </android.support.v7.widget.CardView>

           <Button
               android:id="@+id/button_submit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="32dp"
               android:background="@drawable/bg_transparent_silver"
               android:text="@string/text_choose"
               android:textColor="@color/goldenBrownLawyer"
               android:textSize="14sp" />
       </LinearLayout>
   </ScrollView>

    <include layout="@layout/view_progress"/>


</android.support.constraint.ConstraintLayout>