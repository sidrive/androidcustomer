<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_grad1"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/img_logo"
          android:layout_width="240dp"
          android:layout_height="72dp"
          android:layout_marginTop="@dimen/res_18dp"
          android:paddingStart="@dimen/res_24dp"
          android:paddingEnd="@dimen/res_24dp"
          android:src="@drawable/logotulisan"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_find"
          />

      <android.support.v7.widget.CardView
          android:id="@+id/cv_find"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_9dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/img_logo"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_history"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >
          <ImageView
              android:id="@+id/img_find"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_person_pin_circle_black_24dp"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_find"
              app:layout_constraintBottom_toBottomOf="parent"
              />
          <TextView
              android:id="@+id/tv_find"
              android:textSize="18sp"
              android:layout_width="0dp"
              android:textStyle="bold"
              android:textColor="@color/goldenBrownLawyer"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:text="@string/str_find_lawyer"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_find_desc"
              app:layout_constraintStart_toEndOf="@id/img_find"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_find_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:textColor="@color/charcoalLawyer"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="@string/str_pilih_lawyer_yang_sesuai"
              app:layout_constraintTop_toBottomOf="@id/tv_find"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_find"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:id="@+id/cv_history"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_9dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          app:cardBackgroundColor="@color/grayLawyer"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/cv_find"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_profile"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >

          <ImageView
              android:id="@+id/img_history_pro"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_history_white"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_history"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <TextView
              android:id="@+id/tv_history"
              android:textSize="18sp"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/goldenBrownLawyer"
              android:layout_height="wrap_content"
              android:text="@string/str_history"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_history_desc"
              app:layout_constraintStart_toEndOf="@id/img_history_pro"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_history_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textColor="@color/charcoalLawyer"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="@string/str_daftar_transaksi"
              app:layout_constraintTop_toBottomOf="@id/tv_history"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_history_pro"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/cv_profile"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_9dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          app:cardBackgroundColor="@color/grayLawyer"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/cv_history"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_help"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >

          <ImageView
              android:id="@+id/img_profile"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_person_white_24dp"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_profile"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <TextView
              android:id="@+id/tv_profile"
              android:textSize="18sp"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/goldenBrownLawyer"
              android:layout_height="wrap_content"
              android:text="Profile"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_profile_desc"
              app:layout_constraintStart_toEndOf="@id/img_profile"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_profile_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textColor="@color/charcoalLawyer"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="Profile Data User"
              app:layout_constraintTop_toBottomOf="@id/tv_profile"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_profile"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/cv_help"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_9dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          app:cardBackgroundColor="@color/grayLawyer"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/cv_profile"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_info"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >

          <ImageView
              android:id="@+id/img_help"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_help_white_24dp"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_help"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <TextView
              android:id="@+id/tv_help"
              android:textSize="18sp"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="@color/goldenBrownLawyer"
              android:layout_height="wrap_content"
              android:text="@string/str_bantuan"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_help_desc"
              app:layout_constraintStart_toEndOf="@id/img_help"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_help_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textColor="@color/charcoalLawyer"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="@string/str_panduan_penggunaan_aplikasi"
              app:layout_constraintTop_toBottomOf="@id/tv_help"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_help"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>


      <android.support.v7.widget.CardView
          android:id="@+id/cv_info"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_9dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          app:cardBackgroundColor="@color/grayLawyer"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/cv_help"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/cv_logout"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >

          <ImageView
              android:id="@+id/img_infor"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_info_white_24dp"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_info"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <TextView
              android:id="@+id/tv_info"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textColor="@color/goldenBrownLawyer"
              android:layout_height="wrap_content"
              android:text="@string/str_information"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_info_desc"
              app:layout_constraintStart_toEndOf="@id/img_infor"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_info_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:textColor="@color/charcoalLawyer"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="Informasi Mengenai Aplikasi"
              app:layout_constraintTop_toBottomOf="@id/tv_info"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_infor"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:id="@+id/cv_logout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/res_9dp"
          android:layout_marginBottom="@dimen/res_18dp"
          app:cardCornerRadius="9dp"
          app:cardElevation="4dp"
          app:cardBackgroundColor="@color/grayLawyer"
          android:layout_marginStart="@dimen/res_18dp"
          android:layout_marginEnd="@dimen/res_18dp"
          app:layout_constraintTop_toBottomOf="@id/cv_info"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >

          <ImageView
              android:id="@+id/img_logout"
              android:layout_width="54dp"
              android:layout_height="0dp"
              android:background="@drawable/bg_grad1"
              android:src="@drawable/ic_exit_to_app_black_24dp"
              android:paddingStart="@dimen/res_9dp"
              android:paddingEnd="@dimen/res_9dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_logout"
              app:layout_constraintBottom_toBottomOf="parent"
              />

          <TextView
              android:id="@+id/tv_logout"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:textColor="@color/goldenBrownLawyer"
              android:layout_height="wrap_content"
              android:text="Logout"
              android:layout_marginTop="@dimen/res_18dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@id/tv_logout_desc"
              app:layout_constraintStart_toEndOf="@id/img_logout"
              app:layout_constraintEnd_toEndOf="parent"
              />

          <TextView
              android:id="@+id/tv_logout_desc"
              android:layout_width="0dp"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:textColor="@color/charcoalLawyer"
              android:layout_marginBottom="@dimen/res_18dp"
              android:text="Keluar dari aplikasi"
              app:layout_constraintTop_toBottomOf="@id/tv_logout"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/img_logout"
              />
        </android.support.constraint.ConstraintLayout>

      </android.support.v7.widget.CardView>

      <include layout="@layout/view_progress"/>

    </android.support.constraint.ConstraintLayout>
  </ScrollView>



</android.support.constraint.ConstraintLayout>